<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/fab_margin"
            android:id="@+id/imagemBussula"
            android:src="@drawable/compass" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <TextView
            android:id="@+id/textViewCoordenadasLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/coordenadas" />

        <TextView
            android:id="@+id/textViewGrausLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/graus" />

        <TextView
            android:id="@+id/textViewCoordenadaX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCoordenadasLabel"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@+id/textViewGrausLabel"
            android:layout_toStartOf="@+id/textViewGrausLabel"
            android:text="@string/Nulo" />

        <TextView
            android:id="@+id/textViewCoordenadaY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewCoordenadaX"
            android:layout_toEndOf="@+id/textViewGrausLabel"
            android:layout_toRightOf="@+id/textViewGrausLabel"
            android:text="@string/Nulo" />

        <TextView
            android:id="@+id/textViewGraus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewGrausLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/Nulo" />
    </RelativeLayout>
</LinearLayout>


